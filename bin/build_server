#!/usr/bin/env bash

# Run this script to deploy the app to Github Pages

# Parse cmd arguments

SRC_BRANCH="master"
DEPLOY_BRANCH="gh-pages"

USAGE_MSG="usage: deploy_server [-h|--help] [-p|--port PORT] [-s|--ssh SSH_USER_HOST] [--password PASSWORD] [-d|--deploy DEPLOY_PATH]"

while [[ $# > 0 ]]; do
    key="$1"

    case $key in
        -h|--help)
        echo $USAGE_MSG
        exit 0
        ;;
        -p|--port)
        PORT="$2"
        ;;
        -s|--ssh)
        SSH_USER_HOST="$2"
        shift
        ;;
        -d|--deploy)
        DEPLOY_PATH="$2"
        shift
        ;;
        --password)
        PASSWORD="$2"
        shift
        ;;
        *)
        echo "Option $1 is unknown." >&2
        echo $USAGE_MSG >&2
        exit 1
        ;;
    esac
    shift
done

# Exit if any subcommand fails
set -e

echo "Deploying..."

read -r -p "Do you want to proceed? [y/N] " response
if [[ ! $response =~ ^([yY][eE][sS]|[yY])+$ ]]
then
    echo "Aborting."
    [[ "$0" = "$BASH_SOURCE" ]] && exit 1 || return 1
fi

# Build site
bundle exec jekyll build

# Delete and move files
find . -maxdepth 1 ! -name '_site' ! -name '.git' ! -name 'CNAME' ! -name '.gitignore' -exec rm -rf {} \;
mv _site/* .
rm -R _site/
rm -R blog/
rm -R .git/

# Push to DEPLOY_PATH
# scp -rp -P $PORT . $SSH_USER_HOST:$DEPLOY_PATH/

echo "Built successfully!"

exit 0
